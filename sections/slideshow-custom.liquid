<link
  rel="stylesheet"
  href="{{ 'slideshow-custom.css' | asset_url }}"
  media="print"
  onload="this.media='all'">
<link
  rel="stylesheet"
  type="text/css"
  href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css" rel="stylesheet" />{% comment %} <div class="container">
  <div class="slider-container">
  <div class="slide-content slideshow banner">
  {% for block in section.blocks %}
  <div class="card-wrapper">
  <div class="card-slider">
  {% if block.settings.image %}
  <div class="image-content">
  <div class="card-image">
  {{ block.settings.image | image_url: width: 100 | image_tag: style: 'height:100%; width: 100%; object-fit:cover; border-radius:50%' }}
  </div>
  </div>
  {% endif %}
  {% if block.settings.show_stars %}
  <div class="stars">{%- render 'icon-star' -%}{%- render 'icon-star' -%}{%- render 'icon-star' -%}{%- render 'icon-star' -%}{%- render 'icon-star' -%}</div>
  {% endif %}
  <div class="card-content">
  {% if block.settings.description != blank %}
  <p class="description">{{ block.settings.description }}</p>
  {% endif %}
  {% if block.settings.name != blank %}
  <h2 class="name">{{ block.settings.name }}</h2>
  {% endif %}
  </div>
  </div>
  </div>
  {% endfor %}
  </div>
  </div>
  </div> {% endcomment %}<div class="container-slider">
  <div class="slide-content">
    {% for block in section.blocks %}
      <div class="card-wrapper">
        <div class="card-slider">
          {% if block.settings.image %}
            <div class="image-content">
              <div class="card-image">
                {{ block.settings.image | image_url: width: 100 | image_tag: style: 'height:100%; width: 100%; object-fit:cover; border-radius:50%' }}
              </div>
            </div>
          {% endif %}
          {% if block.settings.show_stars %}
            <div class="stars-flexbox">
              <div class="stars">{%- render 'icon-star' -%}{%- render 'icon-star' -%}{%- render 'icon-star' -%}{%- render 'icon-star' -%}{%- render 'icon-star' -%}</div>
            </div>
          {% endif %}
          <div class="card-content">
            {% if block.settings.description != blank %}
              <p class="description">{{ block.settings.description }}</p>
            {% endif %}
            {% if block.settings.name != blank %}
              <h2 class="name">{{ block.settings.name }}</h2>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<script>
  $(document).ready(function() {

// $('.slide-content').slick({slidesToShow: 3, slidesToScroll: 3, centerMode: true});

    $('.slide-content').slick({
      centerMode: true,
      centerPadding: '60px',
      dots: true,

/* Just changed this to get the bottom dots navigation */
      infinite: true,
      speed: 300,
      slidesToShow: 3,
      arrows: true
    });

// $('.slide-content').slick();
  });


// $('.slide-content').slick({infinite: true, slidesToShow: 3, slidesToScroll: 3});
</script>
{% schema %}
  {
    "name": "custom slide show",
    "tag": "section",
    "class": "section",
    "blocks": [
      {
        "type": "testimonial",
        "name": "Testimonial",
        "limit": 5,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "t:sections.slideshow.blocks.slide.settings.image.label"
          }, {
            "type": "checkbox",
            "id": "show_stars",
            "label": "Show stars",
            "default": true
          }, {
            "type": "textarea",
            "id": "description",
            "label": "Description"
          }, {
            "type": "text",
            "id": "name",
            "label": "Name"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "custom slide show"
      }
    ]
  }
{% endschema %}